<!--            tools:text="医学生" />-->


        <TextView
            android:id="@+id/textView_idCard_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="6dp"
            android:text="请上传人像面"
            android:textColor="@color/red_cc0814"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="@+id/textView_idCard_01"
            app:layout_constraintTop_toBottomOf="@+id/textView_idCard_01" />


        <TextView
            android:id="@+id/tv_example_02"
            android:textColor="@color/blue_108D99"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ico_example_01"
            android:text="示例"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_marginBottom="12dp"
            android:id="@+id/iv_authupload_idCard_image01"
            android:layout_width="150dp"
            android:layout_height="84dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/image_id_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView_idCard_02"
            app:layout_constraintTop_toBottomOf="@+id/textView_idCard_02" />

