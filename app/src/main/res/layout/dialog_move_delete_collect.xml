<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shape"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_moveVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_move_collect"
            android:text="移动视频"
            android:textColor="#ff999999"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="14.5dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="15.5dp"
        android:background="#FFE5E5E5" />


    <LinearLayout
        android:id="@+id/layout_delVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_delete_collect"
            android:text="删除视频"
            android:textColor="#ff999999"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="14.5dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="15.5dp"
        android:background="#FFE5E5E5" />

    <LinearLayout
        android:id="@+id/layout_dissmiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="17.5dp"
        android:src="@drawable/icon_cancle_collect" />
    </LinearLayout>
</LinearLayout>