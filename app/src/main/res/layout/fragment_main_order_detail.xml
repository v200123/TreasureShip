<?xml version="1.0" encoding="utf-8"?><!--订单详情的类，是一个通用类-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3F3F3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/include_title" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="23dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:textColor="#FF111111"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="等待卖家发货" />

            <com.lc.mybaselibrary.ShapeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:textColor="#FF111111"
                android:textSize="17dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21"
                tools:text="商家处理中" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/show_icon_od_delive"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.lc.mybaselibrary.ShapeConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="14dp"
            android:paddingEnd="8dp"
            android:paddingBottom="14dp"
            app:shapeCornersRadius="8dp"
            app:shapeSolidColor="@color/white">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_paypal_locate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_order_detail_address_name"
                tools:layout_editor_absoluteX="8dp" />

            <TextView
                android:id="@+id/tv_order_detail_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView11"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="高志涵" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="北京市 朝阳区 东十里堡路1号未来时光大厦1201"
                android:textColor="#FF333333"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="@+id/tv_order_detail_address_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_order_detail_address_name" />
        </com.lc.mybaselibrary.ShapeConstraintLayout>
        <!--        用于装商品的容器 -->
        <com.lc.mybaselibrary.ShapeLinearLayout
            android:id="@+id/ll_order_deatils_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.lc.mybaselibrary.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="13dp"
            android:paddingTop="16dp"
            android:paddingEnd="13dp"
            android:paddingBottom="20dp"
            app:shapeCornersRadius="8dp"
            app:shapeSolidColor="@color/white">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="订单编号：" />

                <com.lc.mybaselibrary.ShapeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:paddingStart="11dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="11dp"
                    android:text="复制"
                    android:textSize="10dp"
                    app:shapeCornersRadius="8dp"
                    app:shapeSolidColor="@color/whiteSmoke" />


            </FrameLayout>

            <com.lc.liuchanglib.cusotmView.LeftAndRightView
                android:layout_marginTop="14dp"
                app:leftText="下单时间"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.lc.mybaselibrary.ShapeLinearLayout>

    </LinearLayout>


</ScrollView>