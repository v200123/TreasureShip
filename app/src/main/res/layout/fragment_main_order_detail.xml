<?xml version="1.0" encoding="utf-8"?><!--订单详情的类，是一个通用类-->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_title" />


    <ScrollView
        android:layout_marginTop="48dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF3F3F3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="23dp"
                android:paddingEnd="20dp">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:textColor="#FF111111"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="等待卖家发货" />

                <com.lc.mybaselibrary.ShapeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:textColor="#FF111111"
                    android:textSize="17dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView21"
                    tools:text="商家处理中" />

                <ImageView
                    android:id="@+id/iv_order_detail_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/show_icon_od_delive"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.lc.mybaselibrary.ShapeConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="14dp"
                android:paddingEnd="8dp"
                android:paddingBottom="14dp"
                app:shapeCornersRadius="8dp"
                app:shapeSolidColor="@color/white">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/icon_paypal_locate"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_order_detail_address_name"
                    tools:layout_editor_absoluteX="8dp" />

                <TextView
                    android:id="@+id/tv_order_detail_address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/imageView11"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="高志涵" />

                <TextView
                    android:id="@+id/tv_order_detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="北京市 朝阳区 东十里堡路1号未来时光大厦1201"
                    android:textColor="#FF333333"
                    android:textSize="13dp"
                    app:layout_constraintStart_toStartOf="@+id/tv_order_detail_address_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_order_detail_address_name" />
            </com.lc.mybaselibrary.ShapeConstraintLayout>
            <!--        用于装商品的容器 -->
            <com.lc.mybaselibrary.ShapeLinearLayout
                android:paddingBottom="8dp"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="11dp"
                app:shapeCornersRadius="8dp"
                app:shapeSolidColor="@color/white"
                android:id="@+id/ll_order_deatils_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.lc.mybaselibrary.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:paddingStart="13dp"
                android:paddingTop="16dp"
                android:paddingEnd="13dp"
                android:paddingBottom="20dp"
                android:layout_marginBottom="10dp"
                app:shapeCornersRadius="8dp"
                app:shapeSolidColor="@color/white">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_order_detail_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="订单编号：" />

                    <com.lc.mybaselibrary.ShapeTextView
                        android:id="@+id/tv_order_detail_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:paddingStart="11dp"
                        android:paddingEnd="11dp"
                        android:text="复制"
                        android:textSize="10dp"
                        app:shapeCornersRadius="8dp"
                        app:shapeSolidColor="@color/whiteSmoke" />


                </FrameLayout>

                <com.lc.liuchanglib.cusotmView.LeftAndRightView
                    android:id="@+id/tv_order_detail_create_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    app:leftText="下单时间"
                    app:leftTextColor="@color/black" />

                <com.lc.liuchanglib.cusotmView.LeftAndRightView
                    android:visibility="gone"
                    android:id="@+id/tv_order_detail_pay_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    app:leftText="支付时间："
                    app:leftTextColor="@color/black" />

                <com.lc.liuchanglib.cusotmView.LeftAndRightView
                    android:visibility="gone"
                    android:id="@+id/tv_order_detail_pay_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    app:leftText="支付方式："
                    app:leftTextColor="@color/black" />

                <com.lc.liuchanglib.cusotmView.LeftAndRightView
                    android:id="@+id/tv_order_detail_send_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    app:leftText="发货时间："
                    app:leftTextColor="@color/black" />

                <com.lc.liuchanglib.cusotmView.LeftAndRightView
                    android:visibility="gone"
                    android:id="@+id/tv_order_detail_finish_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    app:leftText="成交时间："
                    app:leftTextColor="@color/black" />
            </com.lc.mybaselibrary.ShapeLinearLayout>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:paddingStart="22dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_chat"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="22dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginStart="22dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_call_help"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="22dp"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:paddingEnd="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.lc.mybaselibrary.ShapeTextView
                android:id="@+id/tv_order_detail_BatchRefund"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:paddingStart="13dp"
                android:paddingEnd="13dp"
                app:shapeCornersRadius="17dp"
                app:shapeStrokeWidth="2px"
                app:shapeStrokeColor="@color/gray999"
                android:text="@string/BatchRefund"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <com.lc.mybaselibrary.ShapeTextView
                android:visibility="gone"
                android:id="@+id/tv_lookup_logistics"
                android:layout_gravity="end"
                android:paddingStart="13dp"
                android:paddingEnd="13dp"
                app:shapeCornersRadius="17dp"
                app:shapeStrokeWidth="2px"
                app:shapeStrokeColor="@color/gray999"
                android:text="@string/LookUpLogistics"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <com.lc.mybaselibrary.ShapeTextView
                android:visibility="gone"
                android:id="@+id/tv_ensureGet"
                app:shapeSolidColor="@color/blue_normal"
                android:textColor="@color/white"
                android:layout_gravity="end"
                android:paddingStart="13dp"
                android:paddingEnd="13dp"
                app:shapeCornersRadius="17dp"
                android:text="@string/EnsureGet"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <com.lc.mybaselibrary.ShapeTextView
                android:visibility="gone"
                android:id="@+id/tv_imme_pay"
                app:shapeSolidColor="@color/swipe_red"
                android:textColor="@color/white"
                android:layout_gravity="end"
                android:paddingStart="13dp"
                android:paddingEnd="13dp"
                app:shapeCornersRadius="17dp"
                android:text="@string/imme_pay"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <com.lc.mybaselibrary.ShapeTextView
                android:visibility="gone"
                android:id="@+id/tv_restart_buy"
                app:shapeSolidColor="@color/swipe_red"
                android:textColor="@color/white"
                android:layout_gravity="end"
                android:paddingStart="13dp"
                android:paddingEnd="13dp"
                app:shapeCornersRadius="17dp"
                android:text="@string/restart_buy"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <com.lc.mybaselibrary.ShapeTextView
                android:visibility="gone"
                android:layout_marginEnd="100dp"
                android:id="@+id/tv_cancel_order"
                android:layout_gravity="end"
                android:paddingStart="13dp"
                android:paddingEnd="13dp"
                app:shapeCornersRadius="17dp"
                app:shapeStrokeWidth="2px"
                app:shapeStrokeColor="@color/gray999"
                android:text="@string/cancel_order"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
