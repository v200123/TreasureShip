<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_title"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">


        <EditText
            android:id="@+id/et_department_search"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/home_search_input_shape"
            android:drawableStart="@drawable/icon_search"
            android:drawableEnd="@drawable/ico_alph_close"
            android:drawablePadding="10.0dp"
            android:hint="输入名称或您添加的标签"
            android:imeOptions="actionSearch"
            android:padding="7dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:singleLine="true"
            android:textColor="#C9C8C8"
            android:textSize="14sp" />

<!--        <TextView-->
<!--            android:id="@+id/tv_cancal"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginEnd="12dp"-->
<!--            android:text="取消"-->
<!--            android:textColor="#4A4A4A"-->
<!--            android:textSize="16sp" />-->
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_department_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
