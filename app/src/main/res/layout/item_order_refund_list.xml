<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingStart="14dp"
    android:paddingTop="16dp"
    android:paddingEnd="14dp"
    android:paddingBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.lc.liuchanglib.cusotmView.LeftAndRightView
            app:leftText="贝利达官方自营店"
            app:rightText="退款"
            android:id="@+id/tv_item_order_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ico_shop_name"
            android:gravity="center"
            android:text="贝利达官方自营店"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.lc.liuchanglib.ShapeImageView
            android:id="@+id/tv_item_order_list_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/ic_clock_clocked"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_order_list_name"
            app:qmui_border_color="@color/grey_cccccc"
            app:qmui_border_width="1dp"
            app:qmui_corner_radius="4dp" />

        <TextView
            android:id="@+id/tv_item_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:maxWidth="230dp"
            android:maxLines="2"
            android:textSize="13dp"
            app:layout_constraintStart_toEndOf="@+id/tv_item_order_list_image"
            app:layout_constraintTop_toTopOf="@+id/tv_item_order_list_image"
            tools:text="【境外商品】贝利达Biorepeir德国进 口软毛刷贝利达Bio德国进口软毛刷..." />

        <TextView
            android:id="@+id/tv_item_order_list_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF111111"
            android:textSize="14dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_item_order_list_sku_price"
            tools:text="x12" />

        <TextView
            android:id="@+id/tv_item_order_list_sku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#FF666666"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/tv_item_order_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_order_name"
            tools:text="成人护齿  |  单支装" />

        <TextView
            android:id="@+id/tv_item_order_list_sku_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@+id/tv_item_order_list_sku"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_order_list_sku"
            tools:text="¥19.99" />

    <TextView
        android:paddingStart="14dp"
        android:fontFamily="sans-serif-medium"
        android:text="服务单详情"
        android:gravity="center_vertical"
        android:background="@color/background_grey"
        android:id="@+id/tv_item_order_list_statue"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        tools:layout_editor_absoluteX="14dp" />

    <com.lc.mybaselibrary.ShapeTextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_item_order_list_seemore"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:gravity="center"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:text="@string/refunding_seemore"
        android:textColor="@color/blue_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_order_list_statue"
        app:shapeCornersRadius="15dp"
        app:shapeStrokeColor="@color/blue_normal"
        app:shapeStrokeWidth="1px" />

    <com.lc.mybaselibrary.ShapeTextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_item_order_list_sudo"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:gravity="center"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:text="@string/refunding_sudo"
        android:textColor="@color/gray999"
        android:layout_marginEnd="15dp"
       app:layout_constraintEnd_toStartOf="@+id/tv_item_order_list_seemore"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_order_list_statue"
        app:shapeCornersRadius="15dp"
        app:shapeStrokeColor="@color/gray999"
        app:shapeStrokeWidth="1px" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="111dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
