<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shape"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:text="查看医嘱"
            android:textAlignment="viewStart"
            android:textColor="#ff26c8d7"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="13.5dp"
            android:src="@drawable/icon_customer_detail_close" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="23.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="23.5dp"
        android:background="#E5E5E5" />

    <TextView
        android:layout_marginBottom="100dp"
        android:id="@+id/tv_doctorAdvice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginStart="23.5dp"
        android:layout_marginTop="23.5dp"
        android:layout_marginEnd="23.5dp"
        android:lineSpacingExtra="27dp"
        android:lineSpacingMultiplier="1.08"
        android:textColor="#ff333333"
        android:textSize="13sp" />
</LinearLayout>