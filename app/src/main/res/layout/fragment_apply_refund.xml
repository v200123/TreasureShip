<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"

    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <ViewStub
        android:id="@+id/vs_apply_refund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/after_sale_part" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/cl_apply_refund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="14dp"
        android:paddingTop="16dp"
        android:paddingEnd="14dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_refund_item_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ico_shop_name"
            android:gravity="center"
            android:text="贝利达官方自营店"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.lc.liuchanglib.ShapeImageView
            android:id="@+id/tv_item_order_list_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/ic_clock_clocked"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_refund_item_shop_name"
            app:qmui_border_color="@color/grey_cccccc"
            app:qmui_border_width="1dp"
            app:qmui_corner_radius="4dp" />

        <TextView
            android:id="@+id/tv_apply_refund_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:maxWidth="230dp"
            android:maxLines="2"
            android:textSize="13dp"
            app:layout_constraintStart_toEndOf="@+id/tv_item_order_list_image"
            app:layout_constraintTop_toTopOf="@+id/tv_item_order_list_image"
            tools:text="【境外商品】贝利达Biorepeir德国进 口软毛刷贝利达Bio德国进口软毛刷..." />

        <TextView
            android:id="@+id/tv_apply_refund_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF111111"
            android:textSize="14dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_apply_refund_sku_price"
            tools:text="x12" />

        <TextView
            android:id="@+id/tv_apply_refund_sku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#FF666666"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/tv_apply_refund_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_apply_refund_name"
            tools:text="成人护齿  |  单支装" />

        <TextView
            android:id="@+id/tv_apply_refund_sku_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@+id/tv_apply_refund_sku"
            app:layout_constraintTop_toBottomOf="@+id/tv_apply_refund_sku"
            tools:text="¥19.99" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.lc.mybaselibrary.ShapeConstraintLayout
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        app:shapeCornersRadius="8dp"
        app:shapeSolidColor="@color/white">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款原因"
                android:textSize="15dp"
                tools:text="退款原因" />

            <TextView
                android:id="@+id/tv_show_refund_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:drawableEnd="@drawable/icon_goto"
                android:hint="@string/plase_choice" />
        </LinearLayout>

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/background_grey"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            tools:layout_editor_absoluteX="15dp" />


        <TextView
            android:id="@+id/tv_apply_refund_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="退款金额"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/view6"
            tools:text="退款金额" />

        <TextView
            android:id="@+id/tv_apply_refund_total_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:textColor="@color/red_cc0814"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/tv_apply_refund_price"
            app:layout_constraintTop_toTopOf="@+id/tv_apply_refund_price"
            tools:text="dsfsdfsfs" />


        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/background_grey"
            app:layout_constraintTop_toBottomOf="@+id/tv_apply_refund_total_price"
            tools:layout_editor_absoluteX="15dp" />

        <TextView
            android:id="@+id/tv_apply_refund_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="退款说明"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/view8"
            tools:text="退款金额" />

        <EditText
            android:autofillHints="输入退款说明，选填"
            android:hint="输入退款说明，选填"
            android:id="@+id/et_apply_refund_remark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:background="@null"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/tv_apply_refund_remark"
            app:layout_constraintTop_toTopOf="@+id/tv_apply_refund_remark"
            />


        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/background_grey"
            app:layout_constraintTop_toBottomOf="@+id/tv_apply_refund_total_price"
            tools:layout_editor_absoluteX="15dp" />


        <View
            android:visibility="gone"
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/background_grey"
            app:layout_constraintTop_toBottomOf="@+id/et_apply_refund_remark"
            tools:layout_editor_absoluteX="15dp" />
        <!--        上传凭证，用于退货-->
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/fl_apply_refund_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传凭证" />

        </FrameLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_apply_refund_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_apply_refund_goods"
            tools:layout_editor_absoluteX="15dp">

            <include layout="@layout/add_image_text" android:id="@+id/add_refund"/>

        </LinearLayout>
    </com.lc.mybaselibrary.ShapeConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.lc.mybaselibrary.ShapeTextView
            android:id="@+id/tv_apply_refund_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:shapeCornersRadius="20dp"
            app:shapeSolidColor="@color/blue_normal" />
    </FrameLayout>

</LinearLayout>