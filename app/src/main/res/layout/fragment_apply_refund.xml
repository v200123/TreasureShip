<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background_grey"
    android:layout_width="match_parent"

    android:layout_height="match_parent">
<include layout="@layout/include_title"/>
    <ViewStub
        android:layout="@layout/after_sale_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="14dp"
        android:paddingTop="16dp"
        android:paddingEnd="14dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_apply_refund_shoop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ico_shop"
            android:gravity="center"
            android:text="贝利达官方自营店"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.lc.liuchanglib.ShapeImageView
            android:id="@+id/shapeImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/ic_clock_clocked"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_apply_refund_shoop_name"
            app:qmui_border_color="@color/grey_cccccc"
            app:qmui_border_width="1dp"
            app:qmui_corner_radius="4dp" />

        <TextView
            android:id="@+id/tv_apply_refund_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:maxWidth="230dp"
            android:maxLines="2"
            android:textSize="13dp"
            app:layout_constraintStart_toEndOf="@+id/shapeImageView"
            app:layout_constraintTop_toTopOf="@+id/shapeImageView"
            tools:text="【境外商品】贝利达Biorepeir德国进 口软毛刷贝利达Bio德国进口软毛刷..." />

        <TextView
            android:id="@+id/tv_apply_refund_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF111111"
            android:textSize="14dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_apply_refund_sku_price"
            tools:text="x12" />

        <TextView
            android:id="@+id/tv_apply_refund_sku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#FF666666"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/tv_apply_refund_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_apply_refund_name"
            tools:text="成人护齿  |  单支装" />

        <TextView
            android:id="@+id/tv_apply_refund_sku_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@+id/tv_apply_refund_sku"
            app:layout_constraintTop_toBottomOf="@+id/tv_apply_refund_sku"
            tools:text="¥19.99" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.lc.mybaselibrary.ShapeConstraintLayout
        android:paddingTop="15dp"
        android:paddingStart="15dp"
        app:shapeCornersRadius="8dp"
        app:shapeSolidColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15dp"
                tools:text = "退款原因"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:hint="@string/plase_choice"
                android:layout_marginStart="24dp"
                android:drawableEnd="@drawable/icon_goto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </com.lc.mybaselibrary.ShapeConstraintLayout>

</LinearLayout>