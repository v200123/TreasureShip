<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="userViewModel"
            type="com.jzz.treasureship.ui.auth.viewmodel.UserViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/usersetting_bg">

                    <FrameLayout
                        android:id="@+id/fl_showtips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:background="#FF111111">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="25dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:src="@drawable/img_auth_tips" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="60dp"
                            android:text="申请平台认证"
                            android:textColor="#FF02FFF6"
                            android:textSize="17dp" />

                        <com.lc.mybaselibrary.ShapeButton
                            android:id="@+id/btn_usersetting_auth"
                            app:shapeCornersRadius="15dp"
                            app:shapeSolidColor="#FF02FFF6"
                            android:layout_width="83dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="23dp"
                            android:gravity="center"
                            android:text="立即认证"
                            android:textColor="@color/black"
                            android:textSize="14dp" />
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/iv_msg"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right"
                            android:layout_marginEnd="11dp"
                            android:src="@drawable/icon_mine_nomsg" />


                        <LinearLayout
                            android:id="@+id/lin_auth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="30dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent">

                                <ImageView
                                    android:id="@+id/iv_user_head"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="21.5dp"
                                    android:layout_marginBottom="24.5dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/icon_default_avatar" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:id="@+id/lin_no_login"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_name"
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="未登录"
                                            android:textColor="@color/white"
                                            android:textSize="18sp" />

                                        <com.jzz.treasureship.view.CustomFlexlayout
                                            android:id="@+id/cf_titles"
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_hospital"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="1秒登录，体验更多功能"
                                        android:textColor="@color/white" />
                                </LinearLayout>
                                <ImageView

                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/icon_user_go_see_more" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="#EEEEEE" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/lin_shopcar"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="21.5dp"
                                android:src="@drawable/ic_mine_car" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="22.5dp"
                                android:drawableEnd="@drawable/icon_check_more"
                                android:gravity="left|center"
                                android:text="购物车"
                                android:textColor="#111111"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="21.5dp"
                            android:background="#EEEEEE" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_mine_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="21.5dp"
                                android:src="@drawable/ic_mine_order" />


                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="22.5dp"
                                android:drawableEnd="@drawable/icon_check_more"
                                android:gravity="left|center"
                                android:text="我的订单"
                                android:textColor="#111111"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="21.5dp"
                                android:background="#EEEEEE" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="21.5dp"
                            android:background="#EEEEEE" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_income"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="21.5dp"
                                android:src="@drawable/icon_mine_income" />


                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="22.5dp"
                                android:drawableEnd="@drawable/icon_check_more"
                                android:gravity="left|center"
                                android:text="我的钱包"
                                android:textColor="#111111"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="21.5dp"
                                android:background="#EEEEEE" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="21.5dp"
                            android:background="#EEEEEE" />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/lin_ranking"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="21.5dp"
                                android:src="@drawable/icon_mine_rank" />


                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="22.5dp"
                                android:drawableEnd="@drawable/icon_check_more"
                                android:gravity="left|center"
                                android:text="我的排名"
                                android:textColor="#111111"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="353.5dp"
                            android:layout_height="1dp"
                            android:layout_marginStart="21.5dp"
                            android:background="#EEEEEE" />
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/fl_setting_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginStart="21.5dp"
                            android:drawablePadding="6dp"
                            android:drawableLeft="@drawable/ico_sale_card"
                            android:gravity="center_vertical"
                            android:textSize="16dp"
                            android:text="我的卡券"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_gravity="end"
                        android:layout_marginEnd="23dp"
                        android:src="@drawable/icon_check_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                        <View
                            android:layout_marginStart="22dp"
                            android:layout_gravity="bottom"
                            android:background="@color/white_eeeeee"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/lin_invite"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="21.5dp"
                                android:src="@drawable/icon_mine_invited" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="22.5dp"
                                android:drawableEnd="@drawable/icon_check_more"
                                android:gravity="left|center"
                                android:text="我的邀请"
                                android:textColor="#111111"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="353.5dp"
                            android:layout_height="1dp"
                            android:layout_marginStart="21.5dp"
                            android:background="#EEEEEE" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="#EEEEEE" />

                <LinearLayout
                    android:id="@+id/lin_setting"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="21.5dp"
                        android:src="@drawable/icon_mine_setting" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="22.5dp"
                        android:drawableRight="@drawable/icon_check_more"
                        android:gravity="left|center"
                        android:text="设置"
                        android:textColor="#111111"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
