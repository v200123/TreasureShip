<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/include_title" />

    <com.xuexiang.xui.widget.tabbar.EasyIndicator
        android:id="@+id/tab_main_coupon"
        app:indicator_width="33dp"
        app:indicator_height="3dp"
        app:indicator_textSize="15sp"
        app:indicator_select_textSize="17sp"
        app:indicator_selected_color="@color/black_121212"
        app:indicator_normal_color="@color/gray_9a9a9a"
        app:indicator_line_color="@color/blue_normal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@+id/include" />
</androidx.constraintlayout.widget.ConstraintLayout>
