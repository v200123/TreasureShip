<?xml version="1.0" encoding="utf-8"?>
<com.lc.mybaselibrary.ShapeLinearLayout
    app:shapeSolidColor="@color/white"
    app:shapeCornersTopLeftRadius="8dp"
    app:shapeCornersTopRightRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="退款原因"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="9dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black_666666"
        android:text="请选择取消订单的原因"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <com.lxj.xpopup.widget.VerticalRecyclerView
        android:layout_marginTop="8dp"
        android:id="@+id/rv_submit_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.lc.mybaselibrary.ShapeTextView
        android:id="@+id/tv_dialog_list_submit"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="15dp"
        app:shapeSolidColor="@color/blue_normal"
        app:shapeCornersRadius="20dp"
        android:textColor="@color/white"
        android:text="@string/submit"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</com.lc.mybaselibrary.ShapeLinearLayout>