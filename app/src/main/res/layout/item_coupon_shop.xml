<?xml version="1.0" encoding="utf-8"?>
<com.lc.mybaselibrary.ShapeLinearLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shapeSolidColor="@color/white"
    app:shapeCornersRadius="8dp"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_coupon_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />

    <TextView
    android:layout_marginStart="6dp"
        android:id="@+id/tv_coupon_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF020202"
        android:textSize="12dp"
        tools:text="dsfsdfsdfsdf" />

    <TextView
        android:layout_marginBottom="11dp"
        android:layout_marginTop="17dp"
        android:layout_marginStart="6dp"
        android:id="@+id/tv_coupon_shop_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFCC0814"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:text="18" />
</com.lc.mybaselibrary.ShapeLinearLayout>