<?xml version="1.0" encoding="utf-8"?>
<com.lc.mybaselibrary.ShapeLinearLayout
    app:shapeCornersRadius="8dp"
    app:shapeSolidColor="@color/white"
    android:background="@color/white"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_coupon_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="175dp"
     />

    <com.lc.mybaselibrary.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:shapeCornersBottomLeftRadius="8dp"
        app:shapeCornersBottomRightRadius="8dp"
        app:shapeSolidColor="@color/white">

        <TextView
            android:id="@+id/tv_coupon_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:maxLines="2"
            android:lines="2"
            android:textColor="#FF020202"
            android:textSize="12dp"
            tools:text="dsfsdfsdfsdf" />

        <TextView
            android:id="@+id/tv_coupon_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="11dp"
            android:textColor="#FFCC0814"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:text="18" />
    </com.lc.mybaselibrary.ShapeLinearLayout>

</com.lc.mybaselibrary.ShapeLinearLayout>