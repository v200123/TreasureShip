<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#7F9F9F9F"
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="#FF111111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingTop="12dp"
            android:paddingStart="25dp"
            android:paddingBottom="12dp"
            android:src="@drawable/img_auth_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="申请平台认证"
            android:textColor="#FF02FFF6"
            android:textSize="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.lc.mybaselibrary.ShapeButton
            android:textColor="@color/black"
            app:shapeSolidColor="#FF02FFF6"
            app:shapeCornersRadius="15dp"
        android:layout_marginEnd="23dp"
            android:text="立即认证"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_gravity="end|center_vertical"
            android:layout_width="83dp"
            android:layout_height="30dp"/>
    </FrameLayout>
    <ImageView
        android:src="@drawable/ico_image_arrow"
        android:layout_marginStart="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>