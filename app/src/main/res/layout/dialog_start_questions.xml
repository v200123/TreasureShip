<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.jzz.treasureship.ui.login.LoginViewModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/layout_content"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:background="@drawable/notice_questions_new">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="16dp"
                android:src="@drawable/icon_dialog_close" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_beLater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp"
                    android:text="一会再说"
                    android:textColor="#ff161616"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_answerNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击开始"
                    android:textColor="#ff22bcd4"
                    android:textSize="12sp" />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</layout>