<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewmodel"
            type="com.jzz.treasureship.ui.login.LoginViewModel" />
    </data>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/garyf6"
        android:orientation="vertical">

        <include layout="@layout/include_title" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="22.5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lxkf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:padding="17dp"
                    android:text="联系客服"
                    android:textColor="#ff111111"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_servicePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400-077-3303"
                    android:textColor="#ff5ad3df"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_cleanCache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="22.5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:padding="17dp"
                    android:text="清除缓存"
                    android:textColor="#ff111111"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff111111"
                    android:textSize="14sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:drawableRight="@drawable/icon_goto"
                android:padding="17dp"
                android:text="意见反馈"
                android:textColor="#ff111111"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_update"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:padding="17dp"
                android:text="检查更新"
                android:textColor="#ff111111"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_aboutus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:drawableRight="@drawable/icon_goto"
                android:padding="17dp"
                android:text="关于我们"
                android:textColor="#ff111111"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="89dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/user_setting_exit_shape"
            android:gravity="center"
            android:padding="15dp"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>
</layout>